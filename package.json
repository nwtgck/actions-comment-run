{
  "name": "actions-comment-run",
  "version": "2.0.0",
  "private": true,
  "description": "Comment run action",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "exit 0 && prettier --write **/*.ts",
    "format-check": "exit 0 && prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "pack": "ncc build",
    "test": "jest",
    "all": "npm run build && npm run lint && npm run pack && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nwtgck/actions-comment-run.git"
  },
  "keywords": [
    "actions",
    "node",
    "setup"
  ],
  "author": "Ryo Ota <nwtgck@nwtgck.org> (https://github.com/nwtgck)",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "1.10.1",
    "@actions/exec": "1.1.1",
    "@actions/github": "5.1.1",
    "marked": "^4.3.0",
    "node-fetch": "3.3.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/marked": "^4.3.0",
    "@types/node": "^16.18.25",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.59.5",
    "@vercel/ncc": "^0.38.1",
    "eslint": "^8.57.0",
    "eslint-plugin-github": "^4.10.2",
    "eslint-plugin-jest": "^27.2.1",
    "jest": "^29.7.0",
    "jest-circus": "^29.5.0",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.2",
    "typescript": "^5.4.2"
  }
}
